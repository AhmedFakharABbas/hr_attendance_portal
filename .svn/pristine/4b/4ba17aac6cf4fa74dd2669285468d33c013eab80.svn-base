.example-container {
  display: flex;
  flex-direction: column;
  max-height: 650px;
  min-width: 300px;
  box-shadow: 0px 3px 6px 0px rgb(0 0 0 / 16%);
}

/* .mat-table {
  overflow: auto;
  max-height: 599px;
} */

table {
  width: 100% !important;
  overflow-y: scroll;
}

th.mat-sort-header-sorted {
  color: black;
}
.pending {
  color: #ffa922;
}

.approved {
  color: #729b61;
}

.disapproved {
  color: #f35e46;
}
mat-table {
  cursor: pointer;
}
.pColor {
  color: #007bff !important;
}
.example-viewport {
  height: 100vh;
  width: 100%;
  /* border: 1px solid black; */
}

.example-item {
  height: 50px;
}
mat-header-cell,
mat-cell {
  justify-content: left;

}
/* mat-cell{
  padding: 10px 10px 10px 10px !important;
} */

.mat-header-cell , .mat-cell{
  padding: 10px 0px 10px 4px !important;
}
::ng-deep .mat-sort-header-arrow{
  margin: 0 0 0 0px !important;
}
.mat-header-cell {
  color: #007bff !important;
  font-family: Arial;
  font-size: 14px;
  line-height: 1.3;
}
.table-responsive .mat-footer-row,
.mat-footer-cell,
.mat-header-cell {
  font-weight: 550;
}
 .emp-ac-table {
 overflow: auto;
 max-height: 544px;
}
.lm-ac-table {
  overflow: auto;
  max-height: 494px;
 }
 .hr-ac-table {
  overflow: auto;
  max-height: 585px;
 }
 .ac-table {
  overflow: auto;
   max-height: 330px;
 }
 .b-color{
  color: rgba(0, 0, 0, 0.87);
 }

