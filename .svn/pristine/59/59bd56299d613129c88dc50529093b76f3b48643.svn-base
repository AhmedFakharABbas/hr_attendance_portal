      <!-- Decision Maker section -->

      <div
        class="ac-title ml-10 mr-10"
        data-toggle="collapse"
        data-target="#decisionMaker"
        aria-expanded="true"
      >
        Decision Maker
        <span class="fr atend"> <i class="fas fa-caret-up"></i></span>
      </div>
      <div class="collapse show ml-10 mr-10" id="decisionMaker">
        <table class="table table-striped">
          <div class="td-w">
            <thead>
              <tr style="background-color: #ffffff">
                <td scope="col" class="title">Selection</td>
                <td scope="col" class="title">Authority</td>
              </tr>
            </thead>
            <tbody>
              <tr
                *ngFor="
                  let decisionMaker of decisionMakerArray;
                  let i = index;
                  let isLast = last;
                  let isFirst = first
                "
              >
                <td class="td-50">
                  <span class="row left-row">
                    Level {{ i + 1 }}:
                    <mat-form-field class="w-28" appearance="outline">
                      <mat-label class="label">Department</mat-label>
                      <mat-select   [formControlName]="'decision_makers_department_'+i" >
                        <mat-option
                          *ngFor="let depart of allDepartments"
                          [value]="depart.id"
                          >{{ depart.department_name }}</mat-option
                        >
                      </mat-select>
                    </mat-form-field>
                    <mat-form-field class="w-28" appearance="outline">
                      <mat-label class="label">Designation</mat-label>
                      <mat-select   [formControlName]="'decision_makers_designation_'+i" >
                        <mat-option
                          *ngFor="let designations of allDesignations"
                          [value]="designations.designation_id"
                          >{{ designations.designation_name }}</mat-option
                        >
                      </mat-select>
                    </mat-form-field>
                    <mat-form-field class="w-28" appearance="outline">
                      <mat-label class="label">Employee</mat-label>
                      <mat-select  [formControlName]="'decision_makers_employee_'+i" >
                        <mat-option
                          *ngFor="  let employee of employee_list
                          | filter
                            :enquiryFormGrop.controls['decision_makers_department_' + i]
                            .value
                            : 'department_id'
                          | filter
                            :enquiryFormGrop.controls['decision_makers_designation_' + i]
                            .value
                            : 'designation_id'
                          "
                          [value]="employee.id"
                          >{{ employee.name }}</mat-option
                        >
                      </mat-select>
                    </mat-form-field>
                    <button
                      class="submitButton"
                      (click)="addDecisionMaker(1, 1)"
                      *ngIf="isLast"
                    >
                      +</button
                    ><button
                      class="submitButton"
                      (click)="removeDecisionMaker()"
                      *ngIf="!isFirst && isLast"
                    >
                      -
                    </button>
                  </span>
                </td>
                <td
                  *ngIf="isFirst"
                  style="background-color: #ffffff; padding: 0"
                  rowspan="8"
                  class="td-50"
                >
                  <tr>
                    <td
                      class="td-33 td-header-padding"
                      *ngFor="
                        let decisionMaker of decisionMakerArray;
                        let i = index;
                        let isLast = last;
                        let isFirst = first
                      "
                    >
                      Level{{ i + 1 }}
                    </td>
                  </tr>
                  <tr
                    *ngFor="
                      let authority of decisionMaker.authorities;
                      let authorityIndex = index;
                      let isLastAuthority = last;
                      let isFirstAurthority = first
                    "
                  >
                    <td
                      *ngFor="
                        let decisionMaker of decisionMakerArray;
                        let decisionMakerIndex = index;
                        let isLastDecisionMaker = last;
                        let isFirstDecisionMaker = first
                      "
                    >
                    <!-- *ngIf="authority.isAuthdisplay==true" -->
                      <div >
                        <mat-form-field class="authority-width" appearance="outline">
                          <mat-label class="label">{{decisionMaker.ddisplay}}=>{{authority.isAuthdisplay}}</mat-label>
                          <mat-select   [formControlName]="'decision_makers_authority_'+decisionMakerIndex">
                            <mat-option
                              *ngFor="let authority of authorities"
                              [value]="authority.authority_id"
                              >{{ authority.authority_name }}</mat-option
                            >
                          </mat-select>
                        </mat-form-field>

                        <button
                          class="submitButton"

                          (click)="addAuthority(decisionMakerIndex,authorityIndex,isLastAuthority)"
                        >
                          +{{decisionMakerIndex}}
                        </button>
                        <button
                          class="submitButton"

                          (click)="removeAuthority(decisionMakerIndex,authorityIndex,isLastAuthority)"
                        >
                          -{{authorityIndex}}
                        </button>
                      </div>
                    </td>
                  </tr>
                </td>
              </tr>
            </tbody>
          </div>
        </table>
      </div>
<!-- submit -->
<div class="ac-footer">
  <div class="text-right ac-button-list">
    <button class="submitButton" type="button" (click)="enquiryFormSubmit()">Submit</button>
    <button class="submitButton">Cancel</button>
  </div>
  </div>
      <!-- Enquiry Types  -->

      <div
        class="ac-title ml-10 mr-10"
        data-toggle="collapse"
        data-target="#enquiryTypes"
        aria-expanded="true"
      >
        Enquiry Types
        <span class="fr atend"> <i class="fas fa-caret-up"></i></span>
      </div>
      <div class="collapse show ml-10 mr-10 mb-10" id="enquiryTypes">
        <app-conduct-setup-details></app-conduct-setup-details>
      </div>
    </form>
  </div>
</div>
