<app-portals-home [s01]="'Employee Profile'" [s02]="'Updates'" [s03]="'Applications Status'"
  [s11]="'Attendance Overview'">
  <div class="s0-1">
    <app-section-profile></app-section-profile>
  </div>
  <div class="s0-2">
    <app-section-update></app-section-update>
  </div>
  <div class="s0-3 p-1">
    <app-section-application-status></app-section-application-status>
  </div>
  <div class="s1-1 p-1">
    <div class="month-container">
      <table>
        <thead>
          <tr>
            <th class="cursor-pointer" (click)="customCalendarService.changeMonthEvent('previous')"><i class="fas fa-chevron-left"></i></th>
            <th colspan="5">{{customCalendarService.calendar.date | date:'MMMM yyyy'}}</th>
            <th class="cursor-pointer" (click)="customCalendarService.changeMonthEvent('next')"><i class="fas fa-chevron-right"></i></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="label" *ngFor="let label of customCalendarService.days">{{label}}</td>
          </tr>
          <tr *ngFor="let week of customCalendarService.calendar.days">
            <td *ngFor="let day of week;let i=index"
              [style.background-color]="getColor(customCalendarService.calendar.date, day?.day)">
              {{day?.day}}
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="legend">
      <div class="sec-1">
        <div><span class="late10"></span>Late Arrival > 9:10</div>
        <div><span class="late30"></span>Late Arrival > 9:30 (Absent)</div>
        <div><span class="absent"></span>Absent</div>
        <div><span class="publicHoliday"></span>Public Holiday</div>
      </div>
      <div class="sec-2">
        <div><span class="businessTravel"></span>Business Travel</div>
        <div><span class="appliedLeave"></span>Leave Applied</div>
        <div><span class="workLeave"></span>Work Leave</div>
      </div>
    </div>
  </div>
</app-portals-home>
