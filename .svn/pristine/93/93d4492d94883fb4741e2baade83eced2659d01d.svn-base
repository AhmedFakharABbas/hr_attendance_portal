/* ================ Attendance Correction */
.ac-box{
  margin-left: 20px !important;
  margin-right: 20px! important;
}
.mat-table {
  overflow: auto;
  max-height: 599px !important;
}
.ac-container{
  position: relative;
  clear: both;
  display: flex;
}
.ac-left-container {
  width: 65%;
  float: left;
  background-color: white;
}
.ac-right-container {
  position: absolute;
  right: 0;
  top: 0;
  height: 99%;
  /*   overflow-y: auto; */

  width: 35%;
  float: right;
  background-color: white;
}
.ac-right-box {
  display: block;
  flex-direction: row-reverse;
  margin-right: 10px;
margin-top: 0% !important;
  background: #fcfcfc !important;
  border: 1px solid #e7e7e7;
}
.ac-title {
  background: url('../../../../../assets/img/box-title.gif') repeat-x left top;

  padding: 8px 10px;
  font: 12px/1.0em Verdana, Arial, Tahome;
  color: #333333;
  font-weight: 600;
}
.ac-box {
  display: block;
  background: #fcfcfc !important;
  border: 1px solid #e7e7e7;
  flex-direction: row;
}
.fr{
  float: right;
  }
/* section end */
/* scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background-color: rgb(128, 25, 25);
}

::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 6px rgba(149, 255, 43, 0.3);
}
/* scrollbar end */
div.ac-title[aria-expanded='false'] >.fr>  .fa-caret-up {
  transform:  rotate(180deg);
}
