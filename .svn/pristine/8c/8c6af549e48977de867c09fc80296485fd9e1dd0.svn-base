.example-container {
  display: flex;
  flex-direction: column;
  max-height: 650px;
  min-width: 300px;
}

/* .mat-table {
  overflow: auto;
  max-height: 599px;
} */

table {
  width: 100% !important;
  overflow-y: scroll;
}

th.mat-sort-header-sorted {
  color: black;
}
.pending {
  color: #ffa922;
}

.approved {
  color: #729b61;
}

.disapproved {
  color: #f35e46;
}
mat-table {
  cursor: pointer;
}
.pColor {
  color: #007bff !important;
}
.example-viewport {
  height: 100vh;
  width: 100%;
  /* border: 1px solid black; */
}

.example-item {
  height: 50px;
}
mat-header-cell,
mat-cell {
  justify-content: center;
}
mat-cell:first-of-type,
mat-header-cell:first-of-type,
mat-footer-cell:first-of-type {
  padding: 12px 0px 12px 0px !important;
}
.mat-header-cell {
  color: #007bff !important;
  font-family: Arial;
  font-size: 14px;
  line-height: 1.3;
}
.table-responsive .mat-footer-row,
.mat-footer-cell,
.mat-header-cell {
  font-weight: 550;
}
 .emp-ac-table {
 overflow: auto;
  max-height: 599px;
}
.lm-ac-table {
  overflow: auto;
   max-height: 544px;
 }
 .hr-ac-table {
  overflow: auto;
   max-height: 750px;
 }
 .ac-table {
  overflow: auto;
   max-height: 330px;
 }
