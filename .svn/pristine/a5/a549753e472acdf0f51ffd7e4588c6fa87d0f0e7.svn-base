/* ================ Attendance Correction */
.ac-box {
  margin-left: 20px !important;
  margin-right: 20px !important;
}
.mat-table {
  overflow: auto;
  max-height: 599px !important;
}
.ac-container {
  position: relative;
  clear: both;
  display: flex;
  background-color: #ffffff;
  margin-bottom: 10px;
}
.ac-form-container {
  position: relative;
  clear: both;
  display: flex;
  background-color: #ffffff;
  /* height: 91vh; */
}
.ac-left-container {
  width: 820px;
  float: left;
  background-color: #ffffff;
}
.ac-right-container {
  position: absolute;
  right: 0;
  top: 0;
  width: 380px;
  margin-right: 20px;
  float: right;
  background-color: #ffffff;
}
.ac-right-box {
  display: block;
  flex-direction: row-reverse;
  margin-top: 0% !important;
  background: #fcfcfc !important;
  border: 1px solid #e7e7e7;
  border-radius: 4px 4px 0px 0px;
}
.ac-title {
  background-image: linear-gradient(#f7f7f7, #d6d6d6);
  /* background: url('../../../../../assets/img/box-title.gif') repeat-x left top; */

  padding: 8px 10px;
  font: 13px/1em Verdana, Arial, Tahome;
  color: #343434;
  font-weight: bold;
}
.ac-box {
  display: block;
  background: #fcfcfc !important;
  border: 1px solid #e7e7e7;
  flex-direction: row;
  width: 1210px;
  border-radius: 4px 4px 0px 0px;
}
.fr {
  float: right;
}
/* section end */
/* scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background-color: rgb(128, 25, 25);
}

::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 6px rgba(149, 255, 43, 0.3);
}
/* scrollbar end */
div.ac-title[aria-expanded="false"] > .fr >img {
  transform: rotate(180deg);
}
.body-container{
background-color: #ffffff;
min-height: 95vh;
}
