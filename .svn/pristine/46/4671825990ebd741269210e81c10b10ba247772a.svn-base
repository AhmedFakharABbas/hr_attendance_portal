<div class="ac-container">
  <div class="w-100">
    <div class="ac-box  mt-2">
      <div class="ac-title-with-input ">
    <span class="title-text">Grievance  Applicaitons</span>
        <span class="float-right">

          <mat-form-field  appearance="outline">
            <mat-label>Status</mat-label>
            <mat-select>

              <mat-option value="option">Pending</mat-option>
              <mat-option value="option">Completed</mat-option>
            </mat-select>
          </mat-form-field>
          <mat-form-field appearance="outline">
            <mat-label>Employee name</mat-label>
            <mat-select>
              <mat-option value="option">Jack</mat-option>
              <mat-option value="option">Miller</mat-option>
              <mat-option value="option">James</mat-option>
            </mat-select>
          </mat-form-field>
        </span>
      </div>

      <div>
        <mat-table  matSort
        class="ac-table"
        #table
        [dataSource]="dataSource"
        (scroll)="onTableScroll($event)"

      >
        <!-- employee_id Column -->
        <ng-container matColumnDef="employee_id">
          <mat-header-cell *matHeaderCellDef mat-sort-header> Employee ID </mat-header-cell>
          <mat-cell *matCellDef="let element"> {{ element.employee_id }} </mat-cell>
        </ng-container>

        <!-- Name Column -->
        <ng-container matColumnDef="against_employee_name">
          <mat-header-cell *matHeaderCellDef mat-sort-header>Grievance Against </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.against_employee_name }}
          </mat-cell>
        </ng-container>

        <!-- Application Date Column -->
        <ng-container matColumnDef="application_date">
          <mat-header-cell *matHeaderCellDef mat-sort-header> Application Date </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.application_date }}
          </mat-cell>
        </ng-container>

        <!-- Month Column -->
        <ng-container matColumnDef="type">
          <mat-header-cell *matHeaderCellDef mat-sort-header> Type </mat-header-cell>
          <mat-cell *matCellDef="let element"> {{ element.type }} </mat-cell>
        </ng-container>
        <!-- correction_date Column -->
        <ng-container matColumnDef="grievance_from">
          <mat-header-cell *matHeaderCellDef mat-sort-header> From </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.grievance_from == null ? "  -" : element.grievance_from }}
          </mat-cell>
        </ng-container>
        <!-- correction_date Column -->
        <ng-container matColumnDef="grievance_to">
          <mat-header-cell *matHeaderCellDef mat-sort-header> To </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.grievance_to }}
          </mat-cell>
        </ng-container>
        <!-- lm_status Column -->
        <ng-container matColumnDef="application_status">
          <mat-header-cell *matHeaderCellDef mat-sort-header>Status </mat-header-cell>
          <mat-cell
            *matCellDef="let element"
            [ngClass]="
              element.application_status == 'Pending' || element.application_status == 1
                ? 'pending'
                : element.application_status == 'Approved' || element.application_status == 2
                ? 'approved'
                : 'disapproved'
            "
          >
            {{
              element.application_status == 1 || element.application_status == "Pending"
                ? "Pending"
                : element.application_status == "Approved" || element.application_status == 2
                ? "Approved"
                : "Disapproved"
            }}
          </mat-cell>
        </ng-container>
        <!-- hr_status Column -->
        <ng-container matColumnDef="hr_status">
          <mat-header-cell *matHeaderCellDef mat-sort-header> HR Status </mat-header-cell>
          <mat-cell
            *matCellDef="let element"
            [ngClass]="
              element.hr_status == 'Pending' || element.hr_status == 1
                ? 'pending'
                : element.hr_status == 'Approved' || element.hr_status == 2
                ? 'approved'
                : 'disapproved'
            "
          >
            {{
              element.hr_status == 1 || element.hr_status == "Pending"
                ? "Pending"
                : element.hr_status == "Approved" || element.hr_status == 2
                ? "Approved"
                : "Disapproved"
            }}
          </mat-cell>
        </ng-container>
        <!-- statusmonth Column -->
        <ng-container matColumnDef="month_name">
          <mat-header-cell *matHeaderCellDef mat-sort-header> Month </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.month_name }}
          </mat-cell>
        </ng-container>

        <!-- Corrections Column -->
        <ng-container matColumnDef="corrections">
          <mat-header-cell *matHeaderCellDef mat-sort-header> Correction </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.corrections }}
          </mat-cell>
        </ng-container>
        <!-- approved Column -->
        <ng-container matColumnDef="approved">
          <mat-header-cell *matHeaderCellDef mat-sort-header> Approved </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.approved }}
          </mat-cell>
        </ng-container>
        <!-- Pending Column -->
        <ng-container matColumnDef="pending">
          <mat-header-cell *matHeaderCellDef mat-sort-header> Pending </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.pending }}
          </mat-cell>
        </ng-container>
        <!-- Reject Column -->
        <ng-container matColumnDef="rejected">
          <mat-header-cell *matHeaderCellDef mat-sort-header>Rejected </mat-header-cell>
          <mat-cell *matCellDef="let element">
            {{ element.rejected }}
          </mat-cell>
        </ng-container>
        <!-- (click)="onRowClick(row)" -->
        <mat-header-row
          *matHeaderRowDef="columnsToDisplay"
          class="tableHeader"
        ></mat-header-row>
        <mat-row
          *matRowDef="let row; columns: columnsToDisplay"

        ></mat-row>
      </mat-table>
        <!-- <table class="ac-table" mat-table [dataSource]="ApplicationDataSource">

          <ng-container [matColumnDef]="column" *ngFor="let column of applicationColums ;let i = index">
            <th mat-header-cell *matHeaderCellDef> {{column| titlecase}} </th>

            <td    mat-cell *matCellDef="let element"  [ngClass]="(element[column])== 'Pending'? 'PendingStatus' : ((column)== 'name'||(column)== 'grievanceAgainst')?'employeeName':''"> {{element[column]}} </td>
          </ng-container>

          <tr mat-header-row *matHeaderRowDef="columnsToDisplay"></tr>
          <tr mat-row *matRowDef="let row; columns: columnsToDisplay;"></tr>
        </table>
        <mat-paginator [pageSizeOptions]="[5, 10, 20]" showFirstLastButtons aria-label="Select page" class="mt-2">
        </mat-paginator> -->
      </div>
    </div>
  </div>
</div>
